<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="primary_btn_style">
        <item name="android:layout_width">@dimen/login_btn_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">400dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="edit_text_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text_field_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="primary_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/primary_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">400dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>